---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImage from '../img/soluciones/controlDeAcceso/IMG_0202.webp';
import logoZKTeco from '../img/soluciones/controlDeAcceso/1-300x180.webp';
import logoGenetec from '../img/soluciones/controlDeAcceso/2-300x180.webp';
import logoSuprema from '../img/soluciones/controlDeAcceso/3-300x180.webp';
import logoHID from '../img/soluciones/controlDeAcceso/4-300x180.webp';
