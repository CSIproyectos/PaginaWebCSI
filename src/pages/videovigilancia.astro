  <style>
    /* Flip Card Styles */
    .flip-card {
      perspective: 1000px;
      cursor: pointer;
      /* Altura fija para mantener el espacio */
      min-height: 400px;
      position: relative;
    }

    .flip-card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      min-height: 400px;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }

    /* Hover flip en desktop */
    @media (hover: hover) {
      .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
      }
    }

    /* Click flip (móvil y desktop) */
    .flip-card.flipped .flip-card-inner {
      transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
      position: absolute;
      width: 100%;
      height: 100%;
      min-height: 400px;
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
      top: 0;
      left: 0;
    }

    .flip-card-back {
      transform: rotateY(180deg);
    }

    /* Z-index para evitar superposiciones */
    .flip-card:hover,
    .flip-card.flipped {
      z-index: 10;
    }

    /* Animación de aparición del icono */
    @keyframes pulse {
      0%, 100% {
        opacity: 0.7;
      }
      50% {
        opacity: 1;
      }
    }

    .flip-card-front svg:last-child {
      animation: pulse 2s ease-in-out infinite;
    }

    /* Responsive: ajustar altura en móvil */
    @media (max-width: 640px) {
      .flip-card,
      .flip-card-inner,
      .flip-card-front,
      .flip-card-back {
        min-height: 450px;
      }
    }
  </style>

