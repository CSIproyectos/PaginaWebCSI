---
const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Sectores', href: '/sectores' },
  { name: 'Financiamiento', href: '/financiamiento' },
  { name: 'Contacto', href: '/contacto' },
  { name: 'Soporte', href: '/soporte' },
  { name: 'Blog', href: 'https://proyectoscsi.mx/blog' },
];

const solucionesDropdown = [
  { name: 'Videovigilancia', href: '/videovigilancia' },
  { name: 'Control de Acceso', href: '/control-de-acceso' },
  { name: 'Cableado Estructurado', href: '/cableado-estructurado' },
  { name: 'Ciberseguridad', href: '/ciberseguridad' },
  { name: 'Detección de Incendios', href: '/deteccion-de-incendios' },
  { name: 'Energías Alternativas', href: '/energias-alternativas' },
  { name: 'Desarrollo de Software', href: '/desarrollo-de-software' },
];

const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
---

<header id="main-header" class:list={[
  "sticky top-0 z-50 w-full transition-all duration-300",
  isHomePage ? "navbar-transparent" : "navbar-scrolled"
]}>
  <nav class="w-full px-6 lg:px-12">
    <div class="flex items-center h-20 md:h-24">
      <!-- Logo -->
      <div class="flex-shrink-0 mr-8 lg:mr-12">
        <a href="/" class="flex items-center space-x-2">
          <!-- Logo oscuro (por defecto) -->
          <img
            id="logo-dark"
            src="/images/logo-dark.webp"
            alt="Proyectos CSI Logo"
            class:list={[
              "h-12 w-auto md:h-14 transition-opacity duration-300",
              isHomePage ? "opacity-0 absolute" : "opacity-100"
            ]}
            width="120"
            height="48"
          />
          <!-- Logo blanco (para navbar transparente) -->
          <img
            id="logo-light"
            src="/images/logo-light.webp"
            alt="Proyectos CSI Logo"
            class:list={[
              "h-12 w-auto md:h-14 transition-opacity duration-300",
              isHomePage ? "opacity-100" : "opacity-0 absolute"
            ]}
            width="120"
            height="48"
          />
        </a>
      </div>

      <!-- Desktop Navigation - Centro -->
      <div class="hidden md:flex md:items-center md:space-x-6 lg:space-x-8 xl:space-x-10 flex-1 justify-center">
        <!-- Inicio -->
        <a
          href="/"
          class:list={[
            'nav-link text-sm lg:text-base font-medium transition-colors',
            currentPath === '/'
              ? 'text-black font-semibold'
              : 'text-gray-700 hover:text-black'
          ]}
          aria-current={currentPath === '/' ? 'page' : undefined}
        >
          Inicio
        </a>
        
        <!-- Soluciones Dropdown -->
        <div class="relative soluciones-dropdown">
          <a
            href="/soluciones"
            class:list={[
              'nav-link text-sm lg:text-base font-medium transition-colors flex items-center gap-1',
              currentPath === '/soluciones'
                ? 'text-black font-semibold'
                : 'text-gray-700 hover:text-black'
            ]}
          >
            Soluciones
            <svg class="w-4 h-4 transition-transform dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          
          <div class="dropdown-menu absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg py-2 opacity-0 invisible transition-all duration-200 border border-gray-200">
            {solucionesDropdown.map((item) => (
              <a
                href={item.href}
                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black transition-colors"
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Resto de enlaces -->
        {navItems.slice(1).map((item) => (
          <a
            href={item.href}
            class:list={[
              'nav-link text-sm lg:text-base font-medium transition-colors',
              currentPath === item.href
                ? 'text-black font-semibold'
                : 'text-gray-700 hover:text-black'
            ]}
            aria-current={currentPath === item.href ? 'page' : undefined}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Redes Sociales - Derecha -->
      <div class="hidden md:flex md:items-center md:space-x-4 ml-auto pl-8 lg:pl-12">
        <!-- Facebook -->
        <a 
          href="https://www.facebook.com/proyectoscsi" 
          target="_blank"
          rel="noopener noreferrer"
          class="nav-link text-gray-700 hover:text-blue-600 transition-colors"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        
        <!-- Instagram -->
        <a 
          href="https://www.instagram.com/proyectoscsi" 
          target="_blank"
          rel="noopener noreferrer"
          class="nav-link text-gray-700 hover:text-pink-600 transition-colors"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        
        <!-- LinkedIn -->
        <a 
          href="https://mx.linkedin.com/company/proyectos-csimx" 
          target="_blank"
          rel="noopener noreferrer"
          class="nav-link text-gray-700 hover:text-blue-700 transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        
        <!-- YouTube -->
        <a 
          href="https://www.youtube.com/@proyectoscsi" 
          target="_blank"
          rel="noopener noreferrer"
          class="nav-link text-gray-700 hover:text-red-600 transition-colors"
          aria-label="YouTube"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden ml-auto">
        <button
          type="button"
          class="mobile-menu-toggle nav-link inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-black hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-700"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú</span>
          <svg
            class="menu-icon h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
          <svg
            class="close-icon hidden h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <!-- Inicio -->
        <a
          href="/"
          class:list={[
            'block px-3 py-2 rounded-md text-base font-medium',
            currentPath === '/'
              ? 'bg-gray-100 text-black font-semibold'
              : 'text-gray-700 hover:bg-gray-100 hover:text-black'
          ]}
        >
          Inicio
        </a>
        
        <!-- Soluciones Mobile Dropdown -->
        <div class="mobile-soluciones-dropdown">
          <button
            type="button"
            class:list={[
              'w-full text-left px-3 py-2 rounded-md text-base font-medium flex items-center justify-between',
              currentPath === '/soluciones'
                ? 'bg-gray-100 text-black font-semibold'
                : 'text-gray-700 hover:bg-gray-100 hover:text-black'
            ]}
          >
            Soluciones
            <svg class="w-4 h-4 transition-transform mobile-dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div class="mobile-dropdown-content hidden pl-6 mt-1 space-y-1">
            <a
              href="/soluciones"
              class="block px-3 py-2 rounded-md text-sm font-semibold text-gray-800 hover:bg-gray-100 hover:text-black"
            >
              Ver todas las soluciones
            </a>
            {solucionesDropdown.map((item) => (
              <a
                href={item.href}
                class="block px-3 py-2 rounded-md text-sm text-gray-600 hover:bg-gray-100 hover:text-black"
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Resto de enlaces -->
        {navItems.slice(1).map((item) => (
          <a
            href={item.href}
            class:list={[
              'block px-3 py-2 rounded-md text-base font-medium',
              currentPath === item.href
                ? 'bg-gray-100 text-black font-semibold'
                : 'text-gray-700 hover:bg-gray-100 hover:text-black'
            ]}
          >
            {item.name}
          </a>
        ))}
        
        <a href="/contacto" class="block w-full mt-4">
          <span class="btn-primary w-full text-center">Cotizar Proyecto</span>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  /* Navbar transparente inicial */
  .navbar-transparent {
    background-color: transparent !important;
    border-top: none !important;
    border-bottom: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }
  
  /* Asegurar que no haya ningún borde o sombra en el header */
  #main-header {
    border: none !important;
  }

  /* Navbar con fondo blanco (después del scroll) */
  .navbar-scrolled {
    background-color: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(8px) !important;
    border-bottom: 1px solid #e5e7eb !important;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1) !important;
  }

  /* Enlaces en navbar transparente */
  .navbar-transparent .nav-link,
  .navbar-transparent .nav-link[class*="text-gray"],
  .navbar-transparent .nav-link[class*="text-black"] {
    color: white !important;
  }

  .navbar-transparent .nav-link:hover {
    color: rgba(255, 255, 255, 0.8) !important;
  }

  /* Dropdown arrow en navbar transparente */
  .navbar-transparent .dropdown-arrow {
    color: white !important;
  }

  /* Iconos de redes sociales en navbar transparente */
  .navbar-transparent .nav-link svg {
    color: white !important;
  }

  .navbar-transparent .nav-link:hover svg {
    color: rgba(255, 255, 255, 0.8) !important;
  }

  /* CTA button en navbar transparente */
  .navbar-transparent .nav-cta {
    background-color: white !important;
    color: #1f2937 !important;
  }

  .navbar-transparent .nav-cta:hover {
    background-color: rgba(255, 255, 255, 0.9) !important;
  }

  /* Mobile menu button en navbar transparente */
  .navbar-transparent .mobile-menu-toggle {
    color: white !important;
  }

  .navbar-transparent .mobile-menu-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1) !important;
    color: white !important;
  }

  .navbar-transparent .mobile-menu-toggle svg {
    stroke: white !important;
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.querySelector('.mobile-menu-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (toggleButton && mobileMenu) {
      toggleButton.addEventListener('click', () => {
        const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
        
        toggleButton.setAttribute('aria-expanded', String(!isExpanded));
        mobileMenu.classList.toggle('hidden');
        menuIcon?.classList.toggle('hidden');
        closeIcon?.classList.toggle('hidden');
      });
    }

    // Desktop Soluciones Dropdown
    const desktopDropdown = document.querySelector('.soluciones-dropdown');
    const desktopMenu = desktopDropdown?.querySelector('.dropdown-menu');
    const desktopArrow = desktopDropdown?.querySelector('.dropdown-arrow');

    if (desktopDropdown && desktopMenu) {
      desktopDropdown.addEventListener('mouseenter', () => {
        desktopMenu.classList.remove('opacity-0', 'invisible');
        desktopMenu.classList.add('opacity-100', 'visible');
        desktopArrow?.classList.add('rotate-180');
      });

      desktopDropdown.addEventListener('mouseleave', () => {
        desktopMenu.classList.add('opacity-0', 'invisible');
        desktopMenu.classList.remove('opacity-100', 'visible');
        desktopArrow?.classList.remove('rotate-180');
      });
    }

    // Mobile Soluciones Dropdown
    const mobileDropdown = document.querySelector('.mobile-soluciones-dropdown');
    const mobileButton = mobileDropdown?.querySelector('button');
    const mobileContent = mobileDropdown?.querySelector('.mobile-dropdown-content');
    const mobileArrow = mobileDropdown?.querySelector('.mobile-dropdown-arrow');

    if (mobileButton && mobileContent) {
      mobileButton.addEventListener('click', () => {
        mobileContent.classList.toggle('hidden');
        mobileArrow?.classList.toggle('rotate-180');
      });
    }
  });
</script>
