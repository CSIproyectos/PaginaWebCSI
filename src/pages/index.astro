<script>
  // Scroll effect para cambiar navbar de transparente a blanca
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    const heroSection = document.getElementById('hero-section');
    const logoDark = document.getElementById('logo-dark');
    const logoLight = document.getElementById('logo-light');

    if (!header || !heroSection) return;

    const handleScroll = () => {
      const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
      const scrollPosition = window.scrollY + 100; // Offset de 100px

      if (scrollPosition >= heroBottom) {
        // Después de la sección héroe - navbar blanca con logo oscuro
        header.classList.remove('navbar-transparent');
        header.classList.add('navbar-scrolled');
        
        if (logoDark && logoLight) {
          logoDark.classList.remove('opacity-0', 'absolute');
          logoDark.classList.add('opacity-100');
          logoLight.classList.remove('opacity-100');
          logoLight.classList.add('opacity-0', 'absolute');
        }
      } else {
        // En la sección héroe - navbar transparente con logo blanco
        header.classList.add('navbar-transparent');
        header.classList.remove('navbar-scrolled');
        
        if (logoDark && logoLight) {
          logoDark.classList.remove('opacity-100');
          logoDark.classList.add('opacity-0', 'absolute');
          logoLight.classList.remove('opacity-0', 'absolute');
          logoLight.classList.add('opacity-100');
        }
      }
    };

    // Ejecutar al cargar y al hacer scroll
    handleScroll();
    window.addEventListener('scroll', handleScroll, { passive: true });
  });
</script>

